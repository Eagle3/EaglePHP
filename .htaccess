<IfModule mod_rewrite.c>
  RewriteEngine Off
  
  RewriteRule ^(\w*)/(\w*)/(\w*)$ index.php?_EAGLE_ROUTE_=$1&_EAGLE_CONTROLLER_=$2&_EAGLE_ACTION_=$3  [NC,QSA]
  RewriteRule ^(\w*)/(\w*)$ index.php?_EAGLE_ROUTE_=$1&_EAGLE_CONTROLLER_=$2&_EAGLE_ACTION_=index  [NC,QSA]
  RewriteRule ^(\w*)$ index.php?_EAGLE_ROUTE_=$1&_EAGLE_CONTROLLER_=index&_EAGLE_ACTION_=index  [NC,QSA]
  
  RewriteCond %{REQUEST_FILENAME} !-d 
  RewriteCond %{REQUEST_FILENAME} !-f 
  RewriteRule ^(.*)$ index.php/$1 [L]

</IfModule>